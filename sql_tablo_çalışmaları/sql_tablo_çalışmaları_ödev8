-- 3 Sütunların her birine göre diğer sütunları güncelleyecek 5 adet UPDATE işlemi yapalım.
		-- Güncelleme 1
	update employee
	set name = 'B'
	where name like 'A%'
	returning*;

		-- Güncelleme 2
		update employee
		set name = 'Y Kusağı'
		where birthday > '1990-01-01'
		returning*;

		-- Güncelleme 3
		update employee
		set name = 'Z Kusağı'
		where birthday > '1990-01-01'
		returning*;
		
				-- Güncelleme 4
		update employee
		set name = 'Teknoloi çağı'
		where birthday > '2010-01-01'
		returning*;

				-- Güncelleme 5
		update employee 
		set email = 'Google hesabı'
		where email like '%google&'
		returning*;

-- 4 Sütunların her birine göre ilgili satırı silecek 5 adet DELETE işlemi yapalım.
			
			-- Silme işlemi 1			
		delete from employee where id = 13
		returning*;

			-- Silme işlemi 2
		delete from employee
		where email like 'A%'
		returning*;

			-- Silme işlemi 3
		delete from employee
		where id <45
		returning*;

			-- Silme işlemi 4
		delete from employee
		where email like 'k%'
		returning*;

			-- Silme işlemi 5
		delete from employee
		where email like 'a%'
		returning*;





